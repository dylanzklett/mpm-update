- model_class = User
.page-header
  %h1=t '.title', :default => [:'helpers.titles.new', 'New %{model}'], :model => model_class.model_name.human.titleize
= form_for user, html: { class: "form form-horizontal user" } do |f|
  = f.submit nil, class: 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), users_path, :class => 'btn btn-default'

  = render 'shared/form_errors', obj: user
  .form-group
    = f.label :email, class: 'control-label'
    .controls
      = f.text_field :email, class: 'form-control', required: true
  .form-group
    = f.label :rep_number, class: 'control-label'
    .controls
      = f.text_field :rep_number, class: 'form-control'
  .form-group
    = f.label :password, class: 'control-label'
    .controls
      = f.password_field :password, class: 'form-control', required: true
  .form-group
    = f.label :password_confirmation, class: 'control-label'
    .controls
      = f.password_field :password_confirmation, class: 'form-control', required: true
  .form-group
    = f.label :admin, class: 'control-label'
    .controls
      = f.check_box :admin, class: 'form-control'
  = f.fields_for :profile, f.object.profile do |profile_builder|
    = render 'profiles/profile', f: profile_builder
