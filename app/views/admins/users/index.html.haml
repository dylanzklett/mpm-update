- model_class = User
.page-header
  %h1
    =t 'titles.users'
    = link_to t('.new', :default => t("helpers.links.new")), new_user_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th Rep Number
      %th First name
      %th Last name
      %th Title
      %th Second title
      %th Address/Base/Location
      %th Street Address
      %th Country
      %th City
      %th State
      %th Zip
      %th Office Phone
      %th Cell Phone
      %th= model_class.human_attribute_name(:admin)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - users.each do |user|
      %tr
        %td= link_to user.email, user_path(user)
        %td= user.rep_number
        %td= user.first_name
        %td= user.last_name
        %td= user.first_title
        %td= user.second_title
        %td= user.first_address
        %td= user.second_address
        %td= user.country
        %td= user.city
        %td= user.state
        %td= user.zip
        %td= user.phone_o
        %td= user.phone_c
        %td= user.admin
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(user), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
