- model_class = Customer
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human.pluralize.titleize
    = link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th Title
      %th Company name
      %th Address/Base/Location
      %th Street Address
      %th= model_class.human_attribute_name(:country)
      %th= model_class.human_attribute_name(:city)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:zip)
      %th Office Phone
      %th Cell Phone
      %th Sales Rep
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - customers.each do |customer|
      %tr
        %td= link_to customer.email, customer_path(customer)
        %td= customer.first_name
        %td= customer.last_name
        %td= customer.first_title
        %td= customer.second_title
        %td= customer.first_address
        %td= customer.second_address
        %td= customer.country
        %td= customer.city
        %td= customer.state
        %td= customer.zip
        %td= customer.phone_o
        %td= customer.phone_c
        %td
          = customer.sales_email
          = "(#{customer.sales_rep_number})" if customer.sales_rep_number
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(customer), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(customer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
