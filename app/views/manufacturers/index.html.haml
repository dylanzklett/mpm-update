- model_class = Manufacturer
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human.pluralize.titleize
    = link_to t('.new', :default => t("helpers.links.new")), new_manufacturer_path, :class => 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:manufacturer_type)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:address)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - manufacturers.each do |manufacturer|
      %tr
        %td= link_to manufacturer.title, manufacturer_path(manufacturer)
        %td= manufacturer.get_type
        %td= manufacturer.email
        %td= manufacturer.phone
        %td= manufacturer.address
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_manufacturer_path(manufacturer), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), manufacturer_path(manufacturer), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
