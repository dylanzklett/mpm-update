%tr
  %td= curtain.building_number
  %td= curtain.room
  %td= "#{curtain.width_in('in')} in | #{curtain.width_in('cm')} cm"
  %td= "#{curtain.height_in('in')} in | #{curtain.height_in('cm')} cm"
  %td= curtain.inout
  %td= curtain.wall_type
  %td= curtain.fabric_color
  %td= curtain.trough_color
  %td= curtain.center_support
  %td= curtain.end_bracket
  %td= curtain.quantity
  %td= number_to_currency(curtain.price, unit: '$')
  %td= number_to_currency(curtain.full_price, unit: '$')

  %td
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_project_curtain_path(project, curtain), :class => 'btn btn-default btn-xs'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), project_curtain_path(project, curtain), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'
