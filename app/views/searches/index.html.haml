.page-header
  %h1
    Projects
    = link_to t('.new', :default => t("helpers.links.new")), new_project_path, :class => 'btn btn-primary'
  %br
  %hr
  = form_tag(searches_path, method: :get, class: 'form-inline') do
    .form-group
      = label_tag(:term, "Search for:", class: 'control-label')
      = text_field_tag(:term, term, class: 'form-control')
    = submit_tag "Search", class: 'btn btn-primary'

= render 'project_table', projects: projects
= page_entries_info projects
= paginate projects
